{
  "name": "damned",
  "version": "1.0.0",
  "description": "An ungodly resurrection of chjj's blessed.",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "rollup --config --watch",
    "csscomb": "csscomb --config docs/css/.csscomb.json docs/css/style.scss docs/css/partials/*.scss",
    "sassc": "sass --watch docs/css/style.scss:docs/css/style.min.css --no-cache --sourcemap=none --style=compressed",
    "serve": "npx http-server docs/ -c-1 -o",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brianjenkins94/damned.git"
  },
  "author": "Brian Jenkins",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brianjenkins94/damned/issues"
  },
  "homepage": "https://github.com/brianjenkins94/damned#readme",
  "devDependencies": {
    "@types/node": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "latest",
    "rollup": "latest",
    "rollup-plugin-commonjs": "latest",
    "rollup-plugin-node-builtins": "latest",
    "rollup-plugin-node-globals": "latest",
    "rollup-plugin-node-resolve": "latest",
    "rollup-plugin-typescript": "latest",
    "ts-node": "latest",
    "tslib": "latest",
    "typescript": "latest"
  },
  "dependencies": {
    "ansi-escapes": "latest",
    "xterm": "latest"
  }
}
