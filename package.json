  "bugs": {
    "url": "https://github.com/brianjenkins94/damned/issues"
  },
  "homepage": "https://github.com/brianjenkins94/damned#readme",
  "devDependencies": {
    "@types/ansi-escapes": "^3.0.0",
    "@types/node": "^10.12.10",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "ansi-escapes": "^3.1.0",
    "xterm": "^3.8.0"
  }
